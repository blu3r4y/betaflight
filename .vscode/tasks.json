{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "clean",
			"command": "make",
			"args": [
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"MSYSTEM": "MSYS",
					"CHERE_INVOKING": "yes",
				},
				"shell": {
					"executable": "C:/msys64/usr/bin/bash.exe",
					"args": [
						"-lc"
					]
				}
			},
		},
		{
			"type": "shell",
			"label": "debug",
			"command": "make",
			"args": [
				"DEBUG=GDB"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"MSYSTEM": "MSYS",
					"CHERE_INVOKING": "yes",
				},
				"shell": {
					"executable": "C:/msys64/usr/bin/bash.exe",
					"args": [
						"-lc"
					]
				}
			},
		},
		{
			"type": "shell",
			"label": "release",
			"command": "make",
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"MSYSTEM": "MSYS",
					"CHERE_INVOKING": "yes",
				},
				"shell": {
					"executable": "C:/msys64/usr/bin/bash.exe",
					"args": [
						"-lc"
					]
				}
			},
		},
		{
			"type": "process",
			"label": "flash",
			"command": "C:/Program Files (x86)/STMicroelectronics/STM32 ST-LINK Utility/ST-LINK Utility/ST-LINK_CLI.exe",
			"args": [
				"-P",
				"${workspaceFolder}/obj/betaflight_4.5.0_STM32F405.hex",
				"-V",
				"-Rst"
			],
			"options": {
				"cwd": "${workspaceFolder}",
			},
		},
		{
			"label": "debug+flash",
			"type": "shell",
			"command": "echo 'debug build flashed'",
			"dependsOrder": "sequence",
			"dependsOn": [
				"debug",
				"flash"
			]
		},
		{
			"label": "release+flash",
			"type": "shell",
			"command": "echo 'debug build flashed'",
			"dependsOrder": "sequence",
			"dependsOn": [
				"release",
				"flash"
			]
		}
	]
}